
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main">

    <TextView
        android:text="Hexadecimal Value:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="50px"
        android:minHeight="50px"
        android:id="@+id/hexText"
        android:layout_marginTop="5.0dp" />

    <EditText
        android:layout_width="160.0dp"
        android:layout_height="80.5dp"
        android:id="@+id/editHex"
        android:inputType="text"
        android:layout_marginTop="20.0dp"/>

    <Button
        android:text="Convert Hex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/convertButton"
        android:layout_marginTop="110.0dp"
        android:layout_marginLeft="130.0dp" />

    <TextView
        android:text="Red"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="61.5dp"
        android:id="@+id/redText"
        android:layout_marginTop="180.0dp"
        android:layout_marginLeft="20.0dp"
        android:textColor="#fff31111" />

    <TextView
        android:text="Green"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="61.5dp"
        android:id="@+id/greenText"
        android:layout_marginTop="180.0dp"
        android:layout_marginLeft="150.0dp"
        android:textColor="#ff10fa2c" />

    <TextView
        android:text="Blue"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="61.5dp"
        android:id="@+id/blueText"
        android:layout_marginTop="180.0dp"
        android:layout_marginLeft="315.0dp"
        android:textColor="#ff0e28ee" />

    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="767px"
        android:minHeight="600px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/colorFrameLinLayout" 
        android:layout_marginTop="200.0dp" />

</RelativeLayout>